<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/game_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_marginVertical="20sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:paddingTop="100dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.05"
                android:layout_marginTop="30dp"
                android:text="물품담기게임"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="45dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/b_trans"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView10"
                android:layout_marginTop="75dp"
                android:background="@drawable/btn_shape"
                android:text="수혈"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/id_injection"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/textView10"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@id/b_trans"
                android:background="@drawable/btn_shape"
                android:text="피내주사"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/sc_injection"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/b_trans"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_shape"
                android:text="피하주사"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/h_managemant"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_injection"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/sc_injection"
                android:background="@drawable/btn_shape"
                android:text="입원관리"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/v_sign"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sc_injection"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_shape"
                android:text="활력징후"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

            <Button
                android:id="@+id/back"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sc_injection"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/v_sign"
                android:background="@drawable/btn_shape"
                android:text="돌아가기"
                android:textColor="@color/textColor"
                android:textSize="25dp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>